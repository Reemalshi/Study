<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/text1"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"

        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_account_circle_24"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name of account "
            android:textSize="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            />
    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/te6"
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:src="@drawable/lap"
        android:scaleType= "fitXY"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tool2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageView
        android:id="@+id/tex1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_favorite_24"
        app:layout_constraintTop_toBottomOf="@id/te6"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_bookmark_24"
        app:layout_constraintTop_toBottomOf="@id/te6"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageView
        android:id="@+id/tex2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_mark_chat_read_24"
        app:layout_constraintTop_toBottomOf="@id/te6"
        app:layout_constraintStart_toEndOf="@id/tex1"
        android:layout_marginStart="16dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_send_24"
        app:layout_constraintTop_toBottomOf="@id/te6"
        app:layout_constraintStart_toEndOf="@id/tex2"
        android:layout_marginStart="16dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>